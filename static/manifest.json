{
  "manifest_version": 2,
  "name": "Text Translator",
  "version": "1.0",
  "description": "Translate selected page elements",
  "permissions": ["storage", "activeTab", "contextMenus"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"]
  }]
}